#!/usr/bin/env bash
source "$DIR/utils/index"

info "Update \033[0;37m[homebrew]\033[0m, this might take some time..."

eval "$(/opt/homebrew/bin/brew shellenv)"

brew update -q > /dev/null 2>&1
success "Updated homebrew"
brew upgrade > /dev/null 2>&1
success "Updated formulae"
brew cleanup > /dev/null 2>&1
success "Cleaned formulae"

# run bundles
success "Brew'ing Brewfile and Caskfile"
brew bundle --file=$DIR/homebrew/Brewfile --no-lock > /dev/null 2>&1
brew bundle --file=$DIR/homebrew/Caskfile --no-lock > /dev/null 2>&1

# cleanup
brew untap homebrew/cask > /dev/null 2>&1
brew untap homebrew/core > /dev/null 2>&1
